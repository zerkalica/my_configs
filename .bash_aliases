alias agi="sudo apt-get install -y"
alias agr="sudo apt-get purge -y"
alias agu="sudo apt-get update"

alias ari="sudo apt-add-repository -y && sudo apt-get update"
alias arr="sudo apt-add=repository -y --remove && sudo apt-get update"

alias sr="sudo service restart"
alias sta="sudo service start"
alias sto="sudo service stop"

alias up="sudo apt-get update -y;sudo apt-get upgrade -y;sudo apt-get install linux-image-generic -y;sudo update-alternatives --remove x-www-browser /usr/bin/google-chrome-stable"

alias w="cd ~/projects"

alias g="git"
alias gf="git flow feature"
alias gr="git flow release"
alias gp="git pull"
alias gps="git push"
alias gco="git checkout"
alias gb="git branch"
alias gc="git add . --all && git commit -a"

alias n="npm"
alias r="npm run"
alias s="npm show"
alias nr="npm r --save"
alias nrd="npm r --save-dev"
alias ni="npm i --save"
alias nid="npm i --save-dev"
